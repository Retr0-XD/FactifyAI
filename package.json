{
  "name": "factifyai-extension",
  "version": "1.0.0",
  "description": "Chrome extension to analyze and fact-check text and images on webpages",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:popup": "cross-env BUILD_TARGET=popup vite build",
    "build:content": "cross-env BUILD_TARGET=content vite build",
    "build:background": "cross-env BUILD_TARGET=background vite build",
    "build": "npm run clean && npm run build:popup && npm run build:content && npm run build:background && npm run postbuild",
    "clean": "rimraf dist",
    "postbuild": "node scripts/copy-manifest.js",
    "preview": "vite preview"
  },
  "keywords": [
    "chrome-extension",
    "fact-checking",
    "ai",
    "misinformation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}
